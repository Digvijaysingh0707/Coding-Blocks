Comparing the adjacent element and swap them
In first iteration largest element comes at last
n-1 iterations
Time complexity O(n^2)


private static void bubbleSort(int[] arr){
       int temp=0;
       int flag=0;
       for(int i =0;i<arr.length;i++){
           for(int j=1;j<arr.length-i;j++){
               if(arr[j-1]>arr[j]){
                   temp=arr[j];
                   arr[j]=arr[j-1];
                   arr[j-1]=temp;
                   flag++;
               }
               if(flag==0){
                   break;
               }
           }
       }
   }

    public static void main(String[] args) {
        int arr[]={5,2,88,22,66};
        System.out.print("Array before sorting: ");
        for(int i=0;i<arr.length;i++){
            System.out.print(arr[i]+" ");
        }
        System.out.println();
        bubbleSort(arr);
        System.out.print("Array after sorting: ");
        for(int i=0;i<arr.length;i++){
            System.out.print(arr[i]+" ");
        }
    }
}
package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int[] a = new int[n];
        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
        }
        for (int i = 0; i < n - 1; i++) {
            for (int j = 0; j < n - 1; j++) {
                if (a[j + 1] < a[j]) {
                    int temp = a[j];
                    a[j] = a[j + 1];
                    a[j + 1] = temp;
                }
            }
        }
            for (int item : a) {
                System.out.println(item + " ");

        }

    }
}


// New Approach
package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int[] a = new int[n];
        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
        }
        for (int i = 0; i < n - 1; i++) {
        
        // n-1-i means ki last elemnent is sorted after each iteratin so we skip that part
            for (int j = 0; j < n - 1-i; j++) {
                if (a[j + 1] < a[j]) {
                    int temp = a[j];
                    a[j] = a[j + 1];
                    a[j + 1] = temp;
                }
            }
        }
            for (int item : a) {
                System.out.println(item + " ");

        }

    }
}


// new Approach
To run second for n-1-i times instead of n-1 times as last element get sorted after each iteration

package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int[] a = new int[n];
        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
        }
        for (int i = 0; i < n - 1; i++) {
            boolean sorted = true;
            for (int j = 0; j < n - 1- i; j++) {
                if (a[j + 1] < a[j]) {
                    int temp = a[j];
                    a[j] = a[j + 1];
                    a[j + 1] = temp;
                    sorted = false;
                }
            }
            if(sorted)
                break;
        }
            for (int item : a) {
                System.out.println(item + " ");

        }

    }
}

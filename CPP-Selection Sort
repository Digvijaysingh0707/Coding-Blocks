select the minimum element and bring it at begining

#include <iostream>

using namespace std;
void selectionSort(int a[],int n){
    for(int i =0;i<n;i++){
        int minIndex = i;
        for(int j = i+1;j<=n-1;j++){
            if(a[minIndex]>a[j]){
                minIndex=j;
            }
        }
        swap(a[minIndex],a[i]);
    }
}
int main(){
int a[]={5,9,6,2,7};
int n =5;
selectionSort(a,n);
for(int i =0;i<5;i++){
    cout<<a[i]<<",";
}



    return 0;
}

JAVA CODE

private static void selectionSort(int[] a,int n){
      int temp;
      for(int i=0;i<n;i++){
          int minIndex=i;
          for(int j =i+1;j<n;j++){
              if(a[minIndex]>a[j]){
                  minIndex=j;
              }
          }
          temp=a[minIndex];
          a[minIndex]=a[i];
          a[i]=temp;
      }
  }

    public static void main(String[] args) {
        int[] a={7,2,3,2,4};
        int n = a.length;
        selectionSort(a,n);
        for(int i =0;i<n;i++){
            System.out.print(a[i]+" ");
        }
    }
}
